<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activity.LanguageActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/game_bg"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:textColor="@color/dk_cyan"
            android:fontFamily="@font/bold_font"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:textSize="30sp"
            android:text="Please select the language"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:id="@+id/engCv"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="@color/dk_red"
                android:layout_marginEnd="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/easy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold_font"
                    android:text="English"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:id="@+id/hebrew"
                app:cardBackgroundColor="@color/dk_blue"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/hard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold_font"
                    android:text="Hebrew"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>




    </LinearLayout>

</RelativeLayout>